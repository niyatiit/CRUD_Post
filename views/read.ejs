<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen text-white bg-zinc-900">
      <div class="text-blue-600 p-5 mb-8">
        <a href="/"> Back To Home </a>
      </div>

      <h1 class="text-3xl p-5">All Users</h1>

      <div class="users flex flex-wrap">
        <% if(user.length > 0){%> <% user.forEach(function(value){ %>
        <div class="user m-2 w-72 p-3 text-white rounded-lg bg-zinc-700">
          <div class="bg-zinc-500 rounded-lg h-52 w-full overflow-hidden">
            <img
              src="<%= value.image %>"
              class="h-auto w-full object-cover"
              alt=""
            />
          </div>
          <h3 class=""><%= value.name %></h3>
          <h5 class="text-zinc-500"><%= value.email %></h5>
          <div class="flex gap-20 mt-10">
            <a href="/edit/<%= value._id %>"> Edit User </a>
            <a href="/delete/<%= value._id %>" class="text-red-400">
              Delete User
            </a>
          </div>
        </div>
        <% })%> <%} else {%>
        <h3 class="text-3xl p-5">No User Yet..</h3>
        <% }%>
      </div>
    </div>
  </body>
</html>
